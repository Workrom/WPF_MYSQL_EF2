<Page x:Class="WPF_MYSQL_EF2.InsertStorePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_MYSQL_EF2"
      mc:Ignorable="d" d:DesignWidth="800"
      Title="InsertStorePage" Height="144">

    <Grid Background="LightGray" Width="780" Height="130.04">
        <TextBox x:Name="S_StoreName_txb" HorizontalAlignment="Left" TextWrapping="NoWrap" Text="Store_name" TextAlignment="Center" VerticalAlignment="Center" Width="90" Height="21" UndoLimit="99" Margin="22,0,0,0" RenderTransformOrigin="-0.198,0.579"/>
        <TextBox x:Name="S_StoreAdress_txb" HorizontalAlignment="Left" TextWrapping="NoWrap" Text="Store_adress" TextAlignment="Center" VerticalAlignment="Center" Width="110" Height="21" UndoLimit="99" Margin="138,0,0,0" RenderTransformOrigin="-0.198,0.579"/>
        <TextBox x:Name="S_StoreRegion_txb" HorizontalAlignment="Left" TextWrapping="NoWrap" Text="Store_Region" TextAlignment="Center" VerticalAlignment="Center" Width="118" Height="21" UndoLimit="99" Margin="272,0,0,0"/>
        <TextBox x:Name="S_StoreCEO_txb" HorizontalAlignment="Left" TextWrapping="NoWrap" Text="Store_CEO" TextAlignment="Center" VerticalAlignment="Center" Width="120" Height="21" UndoLimit="99" Margin="412,0,0,0"/>
        <TextBox x:Name="S_StorePhone_txb" HorizontalAlignment="Left" TextWrapping="NoWrap" Text="Phone" TextAlignment="Center" VerticalAlignment="Center" Width="120" Height="21" UndoLimit="99" Margin="550,0,0,0"/>
    </Grid>
</Page>
